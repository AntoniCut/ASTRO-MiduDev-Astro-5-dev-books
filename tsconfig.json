{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
        "strictNullChecks": true, // add if using `base` template
        //"allowJs": true, // required, and included with all Astro templates
        "baseUrl": ".",
        "paths": {
            "@/font/*": [
                "./public/assets/fonts/*"
            ],
            "@/img/*": [
                "./public/assets/img/*"
            ],
            "@/components/*": [
                "./src/components/*"
            ],
            "@/layouts/*": [
                "./src/layouts/*"
            ],
            "@/scripts/*": [
                "./src/scripts/*"
            ],
            "@/data/*": [
                "./src/data/*"
            ],
            "@/styles/*": [
                "./src/styles/*"
            ]
        }
    }
  
}
